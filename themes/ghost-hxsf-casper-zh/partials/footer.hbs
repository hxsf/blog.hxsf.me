<footer id="index-footer" role="contentinfo">
    <div class="inner">
        <div class="vcard">
            <a href="{{@blog.url}}/rss" id="btn_feed" class="btn icon-feed" title="Feed" target="_blank">
                <strong>Feed</strong>
            </a>

            {{#if @blog.logo}}
            <a href="{{@blog.url}}" class="photo circle">
                <span style="background-image: url('{{@blog.logo}}');">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}}">
                </span>
            </a>
            {{/if}}

            <div class="details">
                <h4><a href="{{@blog.url}}" class="js-remove-domain-schema">{{@blog.title}}</a></h4>
                <a href="{{@blog.url}}" class="js-remove-domain-schema">{{@blog.url}}</a><br>
                <span>Powered by <a href="https://ghost.org">Ghost</a></span>
            </div>
        </div>
        <div id="user_bio">
            <a class="beian" href="http://www.miitbeian.gov.cn" target="_blank" rel="noreferrer">苏ICP备15006882号-2</a>
            <div class="inner">
                {{!-- TODO: Parse HTML for links --}}
                {{@blog.description}}
            </div>
        </div>
    </div>
</footer>
