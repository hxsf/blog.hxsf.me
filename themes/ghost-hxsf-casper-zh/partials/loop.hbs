{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    {{#if feature_image}}
        <div class="image-holder">
            <a href="{{url}}" class="inner" style="background-image: url('{{feature_image}}');">
                <img src="{{feature_image}}">
            </a>
        </div>
    {{/if}}
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt characters="140"}} <a class="read-more" href="{{url}}"> 阅读全文 &raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{tags prefix=" 标签："}}
        <div class="author-right">
            {{#if author.profile_image}}<img class="author-thumb" src="{{author.profile_image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
            {{author}}
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY年MM月DD日"}}</time>
        </div>
    </footer>
</article>
{{/foreach}}

